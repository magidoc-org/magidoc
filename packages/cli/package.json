{
  "name": "@magidoc/cli",
  "description": "Magidoc CLI application responsible for generating GraphQL documentation websites.",
  "private": false,
  "version": "4.0.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "cli",
    "node",
    "magidoc"
  ],
  "homepage": "https://magidoc.js.org/introduction/welcome",
  "repository": {
    "type": "git",
    "url": "https://github.com/magidoc-org/magidoc.git",
    "directory": "packages/cli"
  },
  "bin": {
    "magidoc": "./build/index.js"
  },
  "scripts": {
    "start": "pnpm build:rollup && pnpm execute",
    "execute": "node build/index.js",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "vitest run --coverage",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@magidoc/plugin-starter-variables": "workspace:^",
    "@magidoc/rollup-plugin-gql-schema": "workspace:^",
    "axios": "^1.4.0",
    "chokidar": "^3.5.3",
    "commander": "^10.0.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "listr2": "^6.6.0",
    "lodash": "^4.17.21",
    "sirv": "^2.0.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.4.5",
    "@vitest/coverage-c8": "^0.31.1",
    "rollup": "^3.22.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vitest": "^0.31.1"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "build"
  ]
}
