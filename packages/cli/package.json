{
  "name": "@magidoc/cli",
  "description": "Magidoc CLI application responsible for generating GraphQL documentation websites.",
  "private": false,
  "version": "0.4.1",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "cli",
    "node",
    "magidoc"
  ],
  "bin": {
    "magidoc": "./build/index.js"
  },
  "scripts": {
    "start": "pnpm build:rollup && node build/index.js",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "jest",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@magidoc/rollup-plugin-fetch-gql-schema": "workspace:^0.4.1",
    "axios": "^0.26.1",
    "commander": "^9.1.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.1",
    "listr2": "^4.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "ts-jest": "^27.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
