{
  "name": "@magidoc/cli",
  "description": "Magidoc CLI application responsible for generating GraphQL documentation websites.",
  "private": false,
  "version": "3.2.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "cli",
    "node",
    "magidoc"
  ],
  "homepage": "https://magidoc.js.org/introduction/welcome",
  "repository": {
    "type": "git",
    "url": "https://github.com/magidoc-org/magidoc.git",
    "directory": "packages/cli"
  },
  "bin": {
    "magidoc": "./build/index.js"
  },
  "scripts": {
    "start": "pnpm build:rollup && node build/index.js",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "vitest run --coverage",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@magidoc/plugin-starter-variables": "workspace:^3.2.0",
    "@magidoc/rollup-plugin-gql-schema": "workspace:^3.2.0",
    "axios": "^1.2.6",
    "chokidar": "^3.5.3",
    "commander": "^10.0.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.0",
    "listr2": "^5.0.7",
    "lodash": "^4.17.21",
    "sirv": "^2.0.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@vitest/coverage-c8": "^0.28.3",
    "rollup": "^3.12.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.28.3"
  },
  "engines": {
    "node": ">=16.14"
  },
  "files": [
    "build"
  ]
}
