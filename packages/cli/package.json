{
  "name": "@magidoc/cli",
  "description": "Magidoc CLI application responsible for generating GraphQL documentation websites.",
  "private": false,
  "version": "6.3.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "cli",
    "node",
    "magidoc"
  ],
  "homepage": "https://magidoc.js.org/introduction/welcome",
  "repository": {
    "type": "git",
    "url": "https://github.com/magidoc-org/magidoc.git",
    "directory": "packages/cli"
  },
  "bin": {
    "magidoc": "./build/index.js"
  },
  "scripts": {
    "start": "pnpm build:rollup && pnpm execute",
    "execute": "node build/index.js",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "vitest run --coverage",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@magidoc/plugin-starter-variables": "workspace:^",
    "@magidoc/rollup-plugin-gql-schema": "workspace:^",
    "axios": "1.12.2",
    "chokidar": "4.0.3",
    "commander": "14.0.1",
    "extract-zip": "2.0.1",
    "fs-extra": "11.3.2",
    "listr2": "9.0.5",
    "lodash": "4.17.21",
    "sirv": "3.0.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.4",
    "@types/fs-extra": "11.0.4",
    "@types/lodash": "4.17.20",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "3.2.4",
    "rollup": "4.52.5",
    "rollup-plugin-preserve-shebang": "1.0.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "build"
  ]
}
