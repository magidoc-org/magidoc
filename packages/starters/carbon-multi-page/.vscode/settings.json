{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.svelte-kit": true,
    "**/coverage": true,
    "**/build": true,
    "**/package": true
  },
  "jest.jestCommandLine": "pnpm jest",
  "jest.autoRun": { "watch": false, "onSave": "test-src-file" },
  "eslint.probe": [
    "javascript",
    "typescript",
    "html",
    "markdown",
    "svelte"
  ],
  "eslint.validate": ["typescript", "svelte"],
  "eslint.packageManager": "pnpm",
}
