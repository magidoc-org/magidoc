  "devDependencies": {
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "3.2.4",
    "rollup": "4.52.5",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "fuse.js": "6.6.2"
  },
  "files": [
    "build"
  ]
