{
  "name": "@magidoc/plugin-fuse-markdown",
  "description": "A plugin used to index markdown text into a Fuse.js search engine.",
  "private": false,
  "version": "4.0.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "markdown",
    "marked",
    "fuse",
    "magidoc"
  ],
  "homepage": "https://magidoc-org.github.io/magidoc/plugins/fuse-markdown",
  "repository": {
    "type": "git",
