{
  "name": "@magidoc/plugin-query-generator",
  "description": "A browser and nodeJS compatible plugin that allows to generate GraphQL Queries and Variables",
  "private": false,
  "version": "0.2.3",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "esbuild --minify --format=esm --target=es2020,chrome58,firefox57,safari11,edge16,node12 --outdir=build `find ./src  -name '*.ts'` && tsc --build tsconfig.build.json",
    "test": "jest",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "graphql": "^16.3.0",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/prettier": "^2.6.0",
    "esbuild": "^0.14.34",
    "graphql-query-compress": "^1.2.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "graphql": "^16.3.0"
  }
}
