{
  "name": "@magidoc/rollup-plugin-parse-gql-schema",
  "description": "A Rollup and ViteJS plugin that allows to fetch a GraphQL Schema from a target URL and save it to a target output folder.",
  "private": false,
  "version": "0.14.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "graphql",
    "graphql-schema",
    "magidoc"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "jest",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "graphql": "^16.4.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/prettier": "^2.6.0",
    "jest": "^28.1.0",
    "jest-extended": "^2.0.0",
    "rollup": "^2.72.0",
    "ts-jest": "^28.0.1",
    "typescript": "^4.6.4"
  }
}
