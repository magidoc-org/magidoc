{
  "name": "@magidoc/rollup-plugin-parse-gql-schema",
  "description": "A Rollup and ViteJS plugin that allows to fetch a GraphQL Schema from a target URL and save it to a target output folder.",
  "private": false,
  "version": "2.12.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "graphql",
    "graphql-schema",
    "magidoc"
  ],
  "homepage": "https://magidoc.js.org/plugins/rollup-parse-graphql-schema",
  "repository": {
    "type": "git",
    "url": "https://github.com/magidoc-org/magidoc.git",
    "directory": "packages/plugins/rollup-parse-gql-schema"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "vitest run --coverage",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@types/prettier": "^2.7.0",
    "@vitest/coverage-c8": "^0.23.1",
    "rollup": "^2.79.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  }
}
