{
  "name": "@magidoc/plugin-svelte-prismjs",
  "description": "A Svelte component library providing an easy to use component to display PrismJS code blocks",
  "type": "module",
  "license": "MIT",
  "version": "0.3.0",
  "svelte": "index.js",
  "private": false,
  "scripts": {
    "build": "pnpm check && pnpm package",
    "package": "svelte-kit package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "release": "cd package && pnpm publish --no-git-checks --access public"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@types/prismjs": "^1.26.0",
    "prismjs": "^1.27.0",
    "svelte": "^3.47.0",
    "svelte-check": "^2.6.0",
    "svelte-preprocess": "^4.10.5",
    "svelte2tsx": "^0.5.8",
    "tslib": "^2.3.1",
    "typescript": "~4.5.5"
  },
  "peerDependencies": {
    "prismjs": "^1.27.0"
  }
}
