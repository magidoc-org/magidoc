{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "include": [
    "vitest.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
