{
  "name": "@magidoc/plugin-fuse-graphql",
  "description": "A plugin used to index a GraphQL schema into a Fuse.js search engine.",
  "private": false,
  "version": "3.0.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "markdown",
    "marked",
    "fuse",
    "magidoc"
  ],
  "homepage": "https://magidoc-org.github.io/magidoc/plugins/fuse-graphql",
  "repository": {
    "type": "git",
    "url": "https://github.com/magidoc-org/magidoc.git",
    "directory": "packages/plugins/fuse-graphql"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "vitest run --coverage",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@magidoc/plugin-fuse-markdown": "workspace:^3.0.0",
    "fuse.js": "^6.6.2",
    "graphql": "^16.6.0",
    "marked": "^4.2.3"
  },
  "devDependencies": {
    "@types/marked": "^4.0.7",
    "@types/node": "^18.11.9",
    "@types/prettier": "^2.7.1",
    "c8": "^7.12.0",
    "rollup": "^3.5.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  },
  "peerDependencies": {
    "fuse.js": "^6.6.2"
  }
}
