{
  "name": "@magidoc/rollup-plugin-fetch-gql-schema",
  "description": "A Rollup and ViteJS plugin that allows to fetch a GraphQL Schema from a target URL and save it to a target output folder.",
  "private": false,
  "version": "0.1.1",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "graphql",
    "graphql-schema"
  ],
  "scripts": {
    "build": "esbuild --minify --sourcemap --outdir=build ./src/*.ts ./src/**/*.ts && tsc --build tsconfig.build.json",
    "test": "jest",
    "release": "pnpm publish"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/prettier": "^2.4.4",
    "esbuild": "^0.14.32",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "nock": "^13.2.4",
    "rollup": "^2.70.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
